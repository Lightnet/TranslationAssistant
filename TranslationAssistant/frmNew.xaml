<Window x:Class="frmNew"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Create New File" Height="547" Width="448"
            FontFamily="Microsoft YaHei"
        FontSize="11.5"  ResizeMode="NoResize" WindowStyle="ToolWindow">
    <DockPanel>
        <TextBox x:Name="entryBox" Height="450" TextWrapping="Wrap" AcceptsReturn="True" DockPanel.Dock="Top" Margin="8,8,8,10" VerticalScrollBarVisibility="Auto" />
        <Button x:Name="btnCreate" Content="Create" Height="23" VerticalAlignment="Top" Width="75" IsDefault="True"/>
    </DockPanel>
</Window>
